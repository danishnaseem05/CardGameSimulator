<%= form_tag draw_cards_from_deck_piles_path({:room_id => params[:room_id]}), :class => 'form', :id => 'draw_form',
    remote: true, :authenticity_token => true do %>
  <%= label :pile, :num_cards, "How many?", :class => 'col-form-label' %>
  <%= text_field :pile, 'num_cards', :class => 'form-control'%>
  <%= submit_tag 'Submit',  :class => 'btn btn-primary'%>
<% end %>
<%= button_to 'Cancel', room_path({:id => params[:room_id]}), :method => :get, :id => 'cancel' %>