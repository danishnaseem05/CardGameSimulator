<h2>Login</h2>

<%= form_tag login_path, :method => :post, :class => 'form' do %>
  <%= label :user, :email, 'Email',  :class => 'col-form-label'  %>
  <%= text_field :user, 'email', id: 'loginEmail', :class => 'form-control' %>
  <%= label :user, :password, 'Password',  :class => 'col-form-label' %>
  <%= password_field :user, 'password', id: 'loginPass', :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Login to my account', id: 'login_submit' %>
<% end %>
<%= button_to 'Sign-up for an account', new_user_path, :method => :get, id: 'signup' %>
