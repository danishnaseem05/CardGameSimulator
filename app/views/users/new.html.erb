<h2>Create New User</h2>

<%= form_tag users_path,  :class => 'form' do %>
  <%= label :user, :user_id, 'Username', :class => 'col-form-label' %>
  <%= text_field :user, 'user_id', id: 'signupUser', :class => 'form-control' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label'  %>
  <%= label :user, :password, 'Password must contain at least 7 characters including one letter and one number', :class => 'col-form-label' %>
  <%= password_field :user, 'password', id: 'signupPass', :class => 'form-control' %>
  <%= label :user, :password, 'Password Confirmation', :class => 'col-form-label'  %>
  <%= password_field :user, 'password_confirmation', id: 'signupPassConfirm', :class => 'form-control' %>
  <%= label :user, :email, 'Email', :class => 'col-form-label'  %>
  <%= text_field :user, 'email', id: 'signupEmail', :class => 'form-control' %>
  <%= label :user, :email, 'Email Confirmation', :class => 'col-form-label'  %>
  <%= text_field :user, 'email_confirmation', id: 'signupEmailConfirm', :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Create Account', id: 'signupCreate' %>
<% end %>
<%= button_to 'Cancel', login_path, :method => :get %>
